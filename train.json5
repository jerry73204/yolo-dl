{
    "dataset": {
        "classes_file": "cfg/coco.class",
        "image_size": 256,
        "class_whitelist": ["person", "bicycle", "car", "motorcycle", "bus", "truck"],
        "kind": {
            "type": "Coco",
            "dataset_dir": "/mnt/client/aeon/coco-2017",
            "dataset_name": "train2017",
        },
        // "kind": {
        //     "type": "Iii",
        //     "dataset_dir": "/mnt/client/aeon/dataset-demo-171207",
        // },
    },
    "logging": {
        "dir": "logs",
        "save_images": false,
    },
    "preprocessor": {
        "cache_dir": "/home/aeon/tmp/yolo-dl-cache",
        "mosaic_prob": 0.3,
        "mosaic_margin": 0.4,
        "affine_prob": 0.3,
        "rotate_degrees": 10,
        "translation": 0.1,
        "scale": [0.9, 1.1],
        "shear": 1.1,
        "horizontal_flip": true,
        "vertical_flip": true,
    },
    "training": {
        "batch_size": 192,
        "default_minibatch_size": 64,
        "match_grid_method": "Rect4",
        "iou_kind": "GIoU",
        "initial_step": 0,
        "momentum": 0.9,
        "weight_decay": 0.0005,
        "lr_schedule": {
            "type": "StepWise",
            "steps": [
                [0, 0.001],
                [400000, 0.0001],
            ],
        },
        "save_checkpoint_steps": 1000,
        "load_checkpoint": {
            "type": "FromRecent",
        },
        "enable_multi_gpu": true,
        "master_device": "cuda(1)",
        "workers": [
            // {
            //     "device": "cuda(0)"
            // },
            {
                "device": "cuda(1)"
            },
            {
                "device": "cuda(2)"
            },
            {
                "device": "cuda(3)"
            },
        ]
    },
}
