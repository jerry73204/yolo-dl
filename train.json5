    "model": {
        "kind": "NewslabV1",
        // "cfg_file": "cfg/model/yolov4-csp-custom-2021-03-11.json5",
        "cfg_file": "cfg/model/yolov4-csp-custom-128x128-2021-07-17.json5",
    },
    "dataset": {
